<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg">


    <RelativeLayout
        android:id="@+id/layout_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/facebook_login_button_color"
        android:gravity="center"
        android:onClick="openFacebookLoginFragment"
        android:padding="14dp">

        <ImageView
            android:id="@+id/icon_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_facebook"/>

        <co.mobiwise.indircom.views.RobotoTextView
            android:id="@+id/textview_facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon_facebook"
            android:layout_toRightOf="@+id/icon_facebook"
            android:text="@string/login_facebook"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_twitter_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_facebook_login"
        android:background="@color/twitter_login_button_color"
        android:gravity="center"
        android:onClick="openTwitterLoginFragment"
        android:padding="14dp">

        <ImageView
            android:id="@+id/icon_twitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_twitter"/>

        <co.mobiwise.indircom.views.RobotoTextView
            android:id="@+id/textview_twitter_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon_twitter"
            android:layout_toRightOf="@+id/icon_twitter"
            android:text="@string/login_twitter"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageview_circle_cover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/image_cover"/>

    <co.mobiwise.indircom.views.RobotoMediumTextView
        android:id="@+id/textview_header_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_circle_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/header_login"
        android:textColor="@color/color_blue_dark"
        android:textSize="20sp"/>

    <co.mobiwise.indircom.views.RobotoTextView
        android:id="@+id/textview_content_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_header_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/content_info"
        android:textColor="@color/color_blue_dark_2"
        android:textSize="16sp"/>


</RelativeLayout>