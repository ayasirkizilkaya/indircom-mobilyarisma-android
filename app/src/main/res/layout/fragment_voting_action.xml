<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="48dp"
        android:text="@string/indircom_app_name"
        android:textSize="@dimen/text_header_size_2" />

    <RelativeLayout
        android:id="@+id/layout_app_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_app_name">


        <ImageView
            android:id="@+id/imageview_action_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/imageview_app_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imageview_action_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_app_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_app_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="48dp"
        android:text="@string/app_category_place_holder"
        android:textSize="@dimen/text_header_size" />


    <RelativeLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_app_category"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imageview_app_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/imageview_app_info"
            android:src="@drawable/ic_dislike" />


        <ImageView
            android:id="@+id/imageview_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_info" />

        <ImageView
            android:id="@+id/imageview_app_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/imageview_app_info"
            android:src="@drawable/ic_like" />
    </RelativeLayout>

</RelativeLayout>