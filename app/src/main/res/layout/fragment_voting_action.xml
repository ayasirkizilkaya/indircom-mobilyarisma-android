<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imageview_app_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_app_name"
        app:siRadius="15dp"
        app:siSquare="false" />

    <co.mobiwise.indircom.views.RobotoMediumTextView
        android:id="@+id/textview_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="2048"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layout_button_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageview_app_image"
        android:layout_marginTop="30dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_dislike"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@drawable/icon_dislike_unselected"/>

        <ImageView
            android:id="@+id/image_like"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@drawable/icon_like_unselected" />

    </LinearLayout>


</RelativeLayout>